<div class='container-fluid d-flex flex-column align-items-center'>

    {{#unless logged_in}}
       <div>
        <a href="http://localhost:3001/login">Login</a>
        <a href="http://localhost:3001/createUser">Create Account</a>
       </div>
    {{/unless}}
    {{#if logged_in}}
    <div>
        <a class='text-decoration-none fw-bolder m-2' href='../api/blog/createPost'>Create Post</a>
        <a class='text-decoration-none fw-bolder m-2' href='../api/posts/deletePost'>Delete Post</a>
    </div>  
    {{/if}}
    
    {{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
 
    <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}
</div>



